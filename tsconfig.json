{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "./dist/out-tsc",
        "baseUrl": "./",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "es2020",        
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2018",
            "dom"
        ],
        "paths": {
            "@state-flow/*": [
                "src/app/state-flow/*/public_api"
            ]
        },
        "plugins": [
            {
              "name": "@manuth/typescript-eslint-plugin",
              "ignoreJavaScript": true,
              "configFile": "custom.eslintrc.js"
            }]        
    },
    "angularCompilerOptions": {
        "enableI18nLegacyMessageIdFormat": false
    }
}