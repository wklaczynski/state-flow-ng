{
    "compilerOptions": {
      "declaration": true,
      "module": "es2015",
      "target": "es5",
      "baseUrl": ".",
      "stripInternal": true,
      "emitDecoratorMetadata": false,
      "experimentalDecorators": true,
      "moduleResolution": "node",
      "outDir": "../build",
      "rootDir": ".",
      "lib": [
        "es2016",
        "dom"
      ],
      "skipLibCheck": true,
      "types": [],
      "paths": {
        "state-flow/*": ["src/app/components/*/public_api"]
      }
    },
    "angularCompilerOptions": {
      "enableIvy": false,
      "annotateForClosureCompiler": false,
      "strictMetadataEmit": true,
      "skipTemplateCodegen": true,
      "flatModuleOutFile": "state-flow.js",
      "flatModuleId": "state-flow"
    },
    "files": [
      "./public_api.ts"
    ]
  }